<div class="row">
 
<!-- Main Blog Content -->
 

<div class="large-9 columns" role="content">
 <% @articulo.each do |articulo| %>
<article>
 
<h3><p>Titulo: <%= articulo.titulo %></p></h3>
<h6><p>Escrito por:<%= articulo.user.name %></p></h6>
<h6><p>Escrito el dia :<%= articulo.created_at %></p></h6>
 
<div class="row">
<div class="large-6 columns">
<p>Descripcion: <%= articulo.contenido %></p>

</div>
<div class="large-6 columns">
<%= image_tag articulo.imagen%>
</div>
</div>
  
</article>
<%= simple_form_for(@articulo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :titulo %>
    <%= f.input :contenido,:class => 'ckeditor' %>
    <%= f.input :user_id %>
    <%= f.file_field :imagen %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<hr />
<% end %>
  
</div>
 
